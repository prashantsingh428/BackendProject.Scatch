<%- include('./partials/header') %>

    <% if(success.length>0){ %>
        <div class="absolute top-24 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500 z-50 animate-fade-in-down">
            <span class="inline-block text-white font-medium">
                <%= success %>
            </span>
        </div>
        <% } %>

            <div
                class="w-full min-h-screen flex flex-col md:flex-row items-start px-5 md:px-10 py-10 gap-10 bg-zinc-50">
                <!-- Admin Sidebar -->
                <div class="w-full md:w-[20%] sticky top-24 transition-all duration-300">
                    <div class="bg-white p-6 rounded-xl border border-zinc-200 shadow-sm">
                        <h3 class="text-xs font-bold text-zinc-400 uppercase tracking-widest mb-6">Admin Panel</h3>
                        <div class="flex flex-col gap-3 text-sm font-medium text-zinc-600">
                            <a class="flex items-center gap-3 px-4 py-3 bg-zinc-100 text-black rounded-lg transition-colors"
                                href="/owners/admin">
                                <i class="ri-dashboard-line"></i> Dashboard
                            </a>
                            <a class="flex items-center gap-3 px-4 py-3 hover:bg-zinc-50 hover:text-black rounded-lg transition-colors"
                                href="/owners/create">
                                <i class="ri-add-circle-line"></i> Create Product
                            </a>
                        </div>

                        <div class="mt-8 pt-6 border-t border-zinc-100">
                            <a class="flex items-center gap-3 px-4 py-3 text-zinc-600 hover:bg-zinc-50 hover:text-black rounded-lg transition-colors mb-2"
                                href="/owners/logout">
                                <i class="ri-logout-box-line"></i> Logout
                            </a>
                            <a class="flex items-center gap-3 px-4 py-3 text-red-500 hover:bg-red-50 rounded-lg transition-colors"
                                href="">
                                <i class="ri-delete-bin-line"></i> Delete All Products
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="w-full md:w-[80%]">

                    <!-- Gallery Management Section -->
                    <div class="mb-12 bg-white p-8 rounded-xl border border-zinc-100 shadow-sm">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h2 class="text-xl font-bold text-zinc-800">Shop Gallery</h2>
                                <p class="text-zinc-500 text-sm mt-1">Manage scrolling images on the shop page</p>
                            </div>
                            <form action="/owners/admin/gallery/upload" method="post" enctype="multipart/form-data"
                                class="flex gap-2">
                                <input type="file" name="image"
                                    class="text-sm text-zinc-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                                    required>
                                <button type="submit"
                                    class="px-4 py-2 bg-zinc-900 text-white text-sm font-medium rounded-lg hover:bg-black transition">Upload</button>
                            </form>
                        </div>

                        <% if (owner && owner.galleryImages && owner.galleryImages.length> 0) { %>
                            <div class="flex flex-wrap gap-4">
                                <% owner.galleryImages.forEach(function(img){ %>
                                    <div
                                        class="relative group w-32 h-32 rounded-lg overflow-hidden border border-zinc-200">
                                        <img src="/images/uploads/<%= img %>" class="w-full h-full object-cover">
                                        <a href="/owners/admin/gallery/delete/<%= img %>"
                                            class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity text-white hover:text-red-400">
                                            <i class="ri-delete-bin-line text-xl"></i>
                                        </a>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } else { %>
                                <div
                                    class="text-center py-8 bg-zinc-50 rounded-lg border border-dashed border-zinc-200">
                                    <p class="text-zinc-400 text-sm">No gallery images uploaded yet.</p>
                                </div>
                                <% } %>
                    </div>

                    <!-- Flash Sale Management Section -->
                    <div class="mb-12 bg-white p-8 rounded-xl border border-zinc-100 shadow-sm">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h2 class="text-xl font-bold text-zinc-800">Flash Sale Management</h2>
                                <p class="text-zinc-500 text-sm mt-1">Set the start and end time for the flash sale</p>
                            </div>
                        </div>

                        <% 
                            let flashStart = "";
                            let flashEnd = "";
                            let flashStartDate = "";
                            let flashStartTime = "";
                            let flashEndDate = "";
                            let flashEndTime = "";
                            let flashActive = false;

                            if (owner && owner.flashSale) {
                                if (owner.flashSale.startTime) {
                                    let start = new Date(owner.flashSale.startTime);
                                    flashStartDate = start.toISOString().split('T')[0];
                                    flashStartTime = start.toTimeString().split(' ')[0].substring(0, 5);
                                }
                                if (owner.flashSale.endTime) {
                                    let end = new Date(owner.flashSale.endTime);
                                    flashEndDate = end.toISOString().split('T')[0];
                                    flashEndTime = end.toTimeString().split(' ')[0].substring(0, 5);
                                }
                                flashActive = owner.flashSale.isActive;
                            }
                        %>

                        <form action="/owners/admin/flashsale/update" method="post" class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-zinc-700 mb-1">Start Time</label>
                                    <div class="flex gap-2">
                                        <input type="date" name="startDate" value="<%= flashStartDate %>" class="w-full px-4 py-2 border border-zinc-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all text-sm">
                                        <input type="time" name="startTime" value="<%= flashStartTime %>" class="w-full px-4 py-2 border border-zinc-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all text-sm">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-zinc-700 mb-1">End Time</label>
                                    <div class="flex gap-2">
                                        <input type="date" name="endDate" value="<%= flashEndDate %>" class="w-full px-4 py-2 border border-zinc-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all text-sm">
                                        <input type="time" name="endTime" value="<%= flashEndTime %>" class="w-full px-4 py-2 border border-zinc-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all text-sm">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex items-center gap-2 mt-4">
                                <input type="checkbox" name="isActive" id="isActive" <%= flashActive ? 'checked' : '' %> class="w-4 h-4 text-blue-600 border-zinc-300 rounded focus:ring-blue-500">
                                <label for="isActive" class="text-sm font-medium text-zinc-700">Activate Flash Sale</label>
                            </div>

                            <div class="flex justify-end mt-4">
                                <button type="submit" class="px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition shadow-lg shadow-blue-500/20">
                                    Save Settings
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="flex items-center justify-between mb-8">
                        <div>
                            <h1 class="text-2xl font-bold text-zinc-800">All Products</h1>
                            <p class="text-zinc-500 text-sm mt-1">Manage your store inventory</p>
                        </div>
                        <a href="/owners/create"
                            class="px-5 py-2.5 bg-zinc-900 text-white text-sm font-medium rounded-lg hover:bg-black transition shadow-lg shadow-zinc-500/20">
                            + Add Product
                        </a>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        <% if (typeof products !=='undefined' && products.length> 0) { %>
                            <% products.forEach(function(product){ %>
                                <div
                                    class="group relative bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 border border-zinc-100">
                                    <!-- Image -->
                                    <div
                                        class="w-full h-48 flex items-center justify-center p-6 bg-[<%= product.bgcolor %>]/10">
                                        <img class="h-full w-full object-contain mix-blend-multiply"
                                            src="/images/uploads/<%= product.image %>" alt="<%= product.name %>">
                                    </div>

                                    <!-- Details -->
                                    <div class="p-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                                        <h3 class="text-lg font-bold leading-tight mb-1 truncate">
                                            <%= product.name %>
                                        </h3>
                                        <div class="flex items-center justify-between">
                                            <h4 class="text-md font-medium opacity-80">â‚¹ <%= product.price %>
                                            </h4>
                                            <div class="flex gap-2">
                                                <a href="#"
                                                    class="w-8 h-8 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/40 backdrop-blur-sm transition-colors"
                                                    title="Edit">
                                                    <i class="ri-pencil-line"></i>
                                                </a>
                                                <a href="#"
                                                    class="w-8 h-8 flex items-center justify-center rounded-full bg-red-500 text-white hover:bg-red-600 transition-colors shadow-sm"
                                                    title="Delete">
                                                    <i class="ri-delete-bin-line"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div
                                            class="col-span-full py-20 bg-white rounded-xl border border-dashed border-zinc-300 flex flex-col items-center justify-center text-center">
                                            <div
                                                class="w-16 h-16 bg-zinc-50 rounded-full flex items-center justify-center mb-4 text-zinc-400">
                                                <i class="ri-store-2-line text-3xl"></i>
                                            </div>
                                            <h3 class="text-lg font-medium text-zinc-800">No products found</h3>
                                            <p class="text-zinc-500 text-sm mt-1 mb-6">Start by creating your first
                                                product.</p>
                                            <a href="/owners/create"
                                                class="px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-full hover:bg-blue-700 transition">
                                                Create Product
                                            </a>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>