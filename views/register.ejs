<%- include('./partials/header') %>

    <% if(error.length>0){ %>
        <div
            class="fixed top-24 left-1/2 -translate-x-1/2 p-4 rounded-xl bg-red-500 text-white font-bold text-sm z-50 animate-fade-in-down shadow-2xl flex items-center gap-3">
            <i class="ri-error-warning-fill text-xl"></i>
            <span>
                <%= error %>
            </span>
        </div>
        <% } %>

            <div class="flex w-full min-h-[calc(100vh-5rem)] bg-white overflow-hidden">
                <!-- Sophisticated Left Panel -->
                <div
                    class="hidden md:flex w-1/2 bg-[#18181B] flex-col justify-center px-20 text-white relative overflow-hidden">
                    <!-- Background Decoration -->
                    <div
                        class="absolute top-[-20%] left-[-20%] w-[80%] h-[80%] bg-zinc-800 rounded-full blur-[120px] opacity-20">
                    </div>
                    <div
                        class="absolute bottom-[-10%] right-[-10%] w-[60%] h-[60%] bg-[#B88E2F] rounded-full blur-[150px] opacity-10">
                    </div>

                    <div class="relative z-10 transition-all duration-1000 animate-fade-in">
                        <span
                            class="inline-block px-3 py-1 rounded-full bg-white/10 text-[#B88E2F] text-[10px] font-bold tracking-widest uppercase mb-6 border border-white/10">
                            Join the Elite
                        </span>
                        <h1 class="text-7xl font-serif leading-[0.9] tracking-tighter mb-6">
                            Join <br /><span class="italic text-[#B88E2F]">Scatch.</span>
                        </h1>
                        <p class="text-zinc-400 text-lg max-w-sm leading-relaxed">
                            Unlock exclusive collections, early access to new drops, and a personalized fashion
                            experience tailored just for you.
                        </p>
                    </div>

                    <!-- Decorative Line -->
                    <div
                        class="absolute bottom-20 left-20 w-32 h-[1px] bg-gradient-to-r from-[#B88E2F] to-transparent opacity-50">
                    </div>
                </div>

                <!-- Register Form Section -->
                <div class="w-full md:w-1/2 flex items-center justify-center p-8 md:p-16 relative">
                    <div class="w-full max-w-md animate-fade-in-up">
                        <div class="mb-10">
                            <h2 class="text-4xl font-serif text-[#18181B] mb-2">Create Account</h2>
                            <p class="text-zinc-500">Enter your details to start your journey.</p>
                        </div>

                        <form autocomplete="off" action="/users/register" method="post" class="space-y-6">
                            <!-- Full Name -->
                            <div class="group">
                                <label
                                    class="block text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-2 transition-colors group-focus-within:text-[#B88E2F]">Full
                                    Name</label>
                                <div class="relative">
                                    <i
                                        class="ri-user-line absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400 group-focus-within:text-[#18181B] transition-colors"></i>
                                    <input
                                        class="w-full pl-12 pr-4 py-4 rounded-2xl border border-zinc-100 bg-zinc-50 focus:bg-white focus:border-[#18181B] outline-none transition-all placeholder:text-zinc-400 text-sm font-medium"
                                        type="text" placeholder="John Doe" name="fullname" required>
                                </div>
                            </div>

                            <!-- Email Address -->
                            <div class="group">
                                <label
                                    class="block text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-2 transition-colors group-focus-within:text-[#B88E2F]">Email
                                    Address</label>
                                <div class="relative">
                                    <i
                                        class="ri-mail-line absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400 group-focus-within:text-[#18181B] transition-colors"></i>
                                    <input
                                        class="w-full pl-12 pr-4 py-4 rounded-2xl border border-zinc-100 bg-zinc-50 focus:bg-white focus:border-[#18181B] outline-none transition-all placeholder:text-zinc-400 text-sm font-medium"
                                        type="email" placeholder="john@example.com" name="email" required>
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="group">
                                <label
                                    class="block text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-2 transition-colors group-focus-within:text-[#B88E2F]">Password</label>
                                <div class="relative">
                                    <i
                                        class="ri-lock-2-line absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400 group-focus-within:text-[#18181B] transition-colors"></i>
                                    <input
                                        class="w-full pl-12 pr-4 py-4 rounded-2xl border border-zinc-200 bg-zinc-50 focus:bg-white focus:border-[#18181B] outline-none transition-all placeholder:text-zinc-400 text-sm font-medium"
                                        type="password" placeholder="••••••••" name="password" required>
                                </div>
                            </div>

                            <div class="pt-4">
                                <button type="submit"
                                    class="w-full py-5 bg-[#18181B] text-white rounded-2xl font-bold text-xs tracking-[0.2em] uppercase transition-all hover:scale-[1.02] active:scale-[0.98] shadow-xl shadow-zinc-900/20 hover:shadow-2xl hover:shadow-zinc-900/30">
                                    Create Account
                                </button>
                            </div>
                        </form>

                        <div class="mt-10 text-center text-sm">
                            <span class="text-zinc-500">Already have an account?</span>
                            <a href="/login"
                                class="text-[#18181B] font-bold ml-1 hover:underline underline-offset-4 decoration-[#B88E2F]">Log
                                in</a>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('./partials/footer') %>