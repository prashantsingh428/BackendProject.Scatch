<%- include('./partials/header') %>

    <div class="w-full min-h-screen bg-white">
        <!-- Hero Banner -->
        <div class="w-full bg-zinc-100 px-4 md:px-12 py-8">
            <div class="max-w-7xl mx-auto">
                <div class="flex items-center gap-2 text-sm text-zinc-500 mb-4">
                    <a href="/shop" class="hover:text-[#18181B]">Main Fashion</a>
                    <i class="ri-arrow-right-s-line"></i>
                    <span class="text-[#18181B] font-medium">
                        <%= categoryName %>
                    </span>
                </div>

                <div class="bg-white rounded-3xl overflow-hidden relative shadow-sm">
                    <div class="absolute inset-0 bg-zinc-50"></div>
                    <div class="relative z-10 flex flex-col md:flex-row items-center justify-between p-8 md:p-12">
                        <div class="flex-1">
                            <h1 class="text-4xl md:text-5xl font-bold text-[#18181B] mb-4">
                                20% OFF ONLY TODAY AND<br>GET SPECIAL GIFT!
                            </h1>
                            <p class="text-zinc-600 text-sm md:text-base">
                                Today only, enjoy a digital 20% off and receive an exclusive gift!<br>
                                Elevate your wardrobe today!
                            </p>
                        </div>
                        <div class="mt-6 md:mt-0">
                            <img src="https://images.unsplash.com/photo-1529374255404-311a2a4f1fd9?w=400&h=400&fit=crop"
                                alt="Model" class="w-64 h-64 object-cover rounded-2xl">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="max-w-7xl mx-auto px-4 md:px-12 py-8">
            <!-- Results Header -->
            <div class="flex items-center justify-between mb-6">
                <p class="text-sm text-zinc-600">
                    Showing <strong>
                        <%= products.length %>
                    </strong> results from <strong>
                        <%= totalProducts %>
                    </strong> for "<strong>
                        <%= categoryName %>
                    </strong>"
                </p>
                <div class="flex items-center gap-4">
                    <span class="text-sm text-zinc-600">Sort by</span>
                    <select onchange="window.location.href='/category/<%= categoryName %>?sortby='+this.value"
                        class="border border-zinc-200 rounded-lg px-4 py-2 text-sm focus:outline-none focus:border-[#18181B]">
                        <option value="popular">Popularity</option>
                        <option value="newest">Newest</option>
                        <option value="price_low">Price: Low to High</option>
                        <option value="price_high">Price: High to Low</option>
                    </select>
                </div>
            </div>

            <div class="flex flex-col md:flex-row gap-8">
                <!-- Left Sidebar - Filters -->
                <aside class="w-full md:w-64 flex-shrink-0">
                    <div class="bg-white border border-zinc-100 rounded-2xl p-6">
                        <h3 class="font-bold text-lg mb-6">Filter Products</h3>

                        <!-- Category -->
                        <div class="mb-6">
                            <h4 class="font-semibold text-sm mb-3">Category</h4>
                            <div class="space-y-2">
                                <% const categories=['T-Shirt', 'Shirt' , 'Women' , 'Bags' , 'Shoes' , 'Watches'
                                    , 'Accessories' ]; %>
                                    <% categories.forEach(cat=> { %>
                                        <label class="flex items-center gap-2 cursor-pointer group">
                                            <input type="checkbox" <%=cat===categoryName ? 'checked' : '' %>
                                            onclick="window.location.href='/category/<%= cat %>'"
                                                class="w-4 h-4 rounded border-zinc-300">
                                                <span class="text-sm text-zinc-600 group-hover:text-[#18181B]">
                                                    <%= cat %>
                                                </span>
                                        </label>
                                        <% }) %>
                            </div>
                        </div>

                        <!-- Price -->
                        <div class="mb-6 border-t border-zinc-100 pt-6">
                            <h4 class="font-semibold text-sm mb-3">Price</h4>
                            <div class="flex items-center gap-2">
                                <input type="range" min="0" max="10000" class="w-full">
                            </div>
                            <div class="flex items-center gap-2 mt-3">
                                <input type="number" placeholder="$0"
                                    class="w-full border border-zinc-200 rounded-lg px-3 py-2 text-sm">
                                <span>-</span>
                                <input type="number" placeholder="$800"
                                    class="w-full border border-zinc-200 rounded-lg px-3 py-2 text-sm">
                            </div>
                        </div>

                        <!-- Color -->
                        <div class="mb-6 border-t border-zinc-100 pt-6">
                            <h4 class="font-semibold text-sm mb-3">Color</h4>
                            <div class="flex flex-wrap gap-2">
                                <% const colors=['#000000', '#6B7280' , '#DC2626' , '#059669' , '#2563EB' , '#7C3AED'
                                    , '#D97706' , '#F59E0B' , '#10B981' , '#06B6D4' ]; %>
                                    <% colors.forEach(color=> { %>
                                        <button
                                            class="w-8 h-8 rounded-full border-2 border-transparent hover:border-[#18181B]"
                                            style="background-color: <%= color %>"></button>
                                        <% }) %>
                            </div>
                        </div>

                        <!-- Size -->
                        <div class="mb-6 border-t border-zinc-100 pt-6">
                            <h4 class="font-semibold text-sm mb-3">Size</h4>
                            <div class="flex flex-wrap gap-2">
                                <% const sizes=['XS', 'S' , 'M' , 'L' , 'XL' , 'XXL' , 'All Size' ]; %>
                                    <% sizes.forEach(size=> { %>
                                        <label class="cursor-pointer">
                                            <input type="radio" name="size" class="peer sr-only">
                                            <div
                                                class="px-4 py-2 border border-zinc-200 rounded-lg text-sm peer-checked:bg-[#18181B] peer-checked:text-white peer-checked:border-[#18181B] hover:border-[#18181B] transition-all">
                                                <%= size %>
                                            </div>
                                        </label>
                                        <% }) %>
                            </div>
                        </div>

                        <!-- Brands -->
                        <div class="border-t border-zinc-100 pt-6">
                            <h4 class="font-semibold text-sm mb-3">Brands</h4>
                            <button
                                class="w-full text-left px-4 py-2 hover:bg-zinc-50 rounded-lg flex items-center justify-between text-sm">
                                <span>View All</span>
                                <i class="ri-arrow-right-s-line"></i>
                            </button>
                        </div>
                    </div>
                </aside>

                <!-- Product Grid -->
                <main class="flex-1">
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% products.forEach(function(item) { %>
                            <div
                                class="bg-white rounded-2xl overflow-hidden shadow-sm border border-zinc-100 group hover:shadow-lg transition-all duration-300">
                                <!-- Image -->
                                <div class="h-64 bg-zinc-50 relative flex items-center justify-center overflow-hidden">
                                    <img src="/images/uploads/<%= item.image %>"
                                        class="w-full h-full object-contain p-4 mix-blend-multiply group-hover:scale-110 transition-transform duration-500">
                                    <% let isWishlisted=user.wishlist.indexOf(item._id) !==-1; %>
                                        <a href="javascript:void(0)" onclick="addToWishlist(event, '<%= item._id %>')"
                                            class="absolute top-3 right-3 w-10 h-10 bg-white rounded-full flex items-center justify-center <%= isWishlisted ? 'text-red-500' : 'text-zinc-300 hover:text-red-500' %> shadow-sm transition-colors z-10">
                                            <i class="<%= isWishlisted ? 'ri-heart-fill' : 'ri-heart-line' %>"></i>
                                        </a>
                                </div>

                                <!-- Content -->
                                <div class="p-4">
                                    <h3 class="font-bold text-[#18181B] text-base mb-2 truncate">
                                        <%= item.name %>
                                    </h3>
                                    <div class="flex items-center gap-1 text-yellow-500 text-xs mb-3">
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-half-fill"></i>
                                        <span class="text-zinc-400 ml-1">(4.5)</span>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <div class="flex flex-col">
                                            <% if(item.discount> 0) { %>
                                                <span class="text-xs text-zinc-400 line-through">₹<%= item.price %>
                                                </span>
                                                <span class="font-bold text-[#18181B] text-lg">₹<%= item.price -
                                                        item.discount %></span>
                                                <% } else { %>
                                                    <span class="font-bold text-[#18181B] text-lg">₹<%= item.price %>
                                                    </span>
                                                    <% } %>
                                        </div>
                                        <a href="javascript:void(0)" onclick="addToCart(event, '<%= item._id %>')"
                                            class="w-10 h-10 rounded-full border-2 border-zinc-200 flex items-center justify-center hover:bg-[#18181B] hover:text-white hover:border-[#18181B] transition-all">
                                            <i class="ri-add-line text-lg"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <!-- Pagination -->
                    <% if (totalPages> 1) { %>
                        <div class="flex items-center justify-center gap-2 mt-12">
                            <% if (currentPage> 1) { %>
                                <a href="/category/<%= categoryName %>?page=<%= currentPage - 1 %>"
                                    class="px-4 py-2 border border-zinc-200 rounded-lg hover:bg-zinc-50 transition-colors">
                                    <i class="ri-arrow-left-s-line"></i> PREVIOUS
                                </a>
                                <% } else { %>
                                    <button disabled
                                        class="px-4 py-2 border border-zinc-200 rounded-lg opacity-50 cursor-not-allowed">
                                        <i class="ri-arrow-left-s-line"></i> PREVIOUS
                                    </button>
                                    <% } %>

                                        <% for(let i=1; i <=totalPages; i++) { %>
                                            <a href="/category/<%= categoryName %>?page=<%= i %>"
                                                class="w-10 h-10 rounded-lg <%= i === currentPage ? 'bg-[#18181B] text-white' : 'border border-zinc-200 hover:bg-zinc-50' %> transition-colors flex items-center justify-center">
                                                <%= i %>
                                            </a>
                                            <% } %>

                                                <% if (currentPage < totalPages) { %>
                                                    <a href="/category/<%= categoryName %>?page=<%= currentPage + 1 %>"
                                                        class="px-4 py-2 border border-zinc-200 rounded-lg hover:bg-zinc-50 transition-colors">
                                                        NEXT <i class="ri-arrow-right-s-line"></i>
                                                    </a>
                                                    <% } else { %>
                                                        <button disabled
                                                            class="px-4 py-2 border border-zinc-200 rounded-lg opacity-50 cursor-not-allowed">
                                                            NEXT <i class="ri-arrow-right-s-line"></i>
                                                        </button>
                                                        <% } %>
                        </div>
                        <% } %>
                </main>
            </div>
        </div>
    </div>

    <script>
        function addToCart(event, productId) {
            event.preventDefault();
            fetch(`/addtocart/${productId}`, {
                headers: {
                    'Accept': 'application/json'
                }
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert('Added to cart!');
                    }
                });
        }

        function addToWishlist(event, productId) {
            event.preventDefault();
            fetch(`/addtowishlist/${productId}`, {
                headers: {
                    'Accept': 'application/json'
                }
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                });
        }
    </script>

    <%- include('./partials/footer') %>