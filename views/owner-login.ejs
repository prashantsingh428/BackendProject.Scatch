<%- include('./partials/header') %>

    <% if(error && error.length> 0){ %>
        <div
            class="fixed top-24 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-red-500 z-50 shadow-xl animate-fade-in-down">
            <span class="inline-block text-white font-medium">
                <%= error %>
            </span>
        </div>
        <% } %>

            <div class="w-full min-h-screen flex items-center justify-center px-5 bg-zinc-50">
                <div class="w-full max-w-md">
                    <div class="bg-white p-8 rounded-2xl shadow-lg border border-zinc-200">
                        <div class="mb-8 text-center">
                            <h2 class="text-3xl font-bold text-zinc-800">Admin Login</h2>
                            <p class="text-zinc-500 mt-2">Access the admin dashboard</p>
                        </div>

                        <form action="/owners/login" method="post" class="space-y-5">
                            <div>
                                <label for="email" class="block text-sm font-medium text-zinc-700 mb-2">Email
                                    Address</label>
                                <input
                                    class="block bg-zinc-50 w-full px-4 py-3 border border-zinc-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                                    type="email" id="email" placeholder="admin@example.com" name="email" required>
                            </div>

                            <div>
                                <label for="password"
                                    class="block text-sm font-medium text-zinc-700 mb-2">Password</label>
                                <input
                                    class="block bg-zinc-50 w-full px-4 py-3 border border-zinc-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                                    type="password" id="password" placeholder="••••••••" name="password" required>
                            </div>

                            <button
                                class="w-full px-5 py-3 mt-4 bg-zinc-900 text-white font-medium rounded-lg hover:bg-black transition shadow-lg hover:shadow-xl"
                                type="submit">
                                Sign In
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <%- include('./partials/footer') %>