<%- include('./partials/header') %>

    <% if(error && error.length> 0){ %>
        <div
            class="fixed top-24 left-1/2 -translate-x-1/2 p-4 rounded-xl bg-red-500 text-white font-bold text-sm z-50 animate-fade-in-down shadow-2xl flex items-center gap-3">
            <i class="ri-error-warning-fill text-xl"></i>
            <span>
                <%= error %>
            </span>
        </div>
        <% } %>

            <div
                class="w-full min-h-[calc(100vh-5rem)] flex items-center justify-center px-6 bg-zinc-50 relative overflow-hidden">
                <!-- Sophisticated Background Decoration -->
                <div
                    class="absolute top-[-20%] left-[-10%] w-[50%] h-[50%] bg-[#18181B] rounded-full blur-[150px] opacity-[0.03]">
                </div>
                <div
                    class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-[#B88E2F] rounded-full blur-[150px] opacity-[0.05]">
                </div>

                <div class="w-full max-w-md relative z-10 animate-fade-in-up">
                    <div
                        class="bg-white p-10 rounded-[2.5rem] shadow-2xl border border-zinc-100 relative overflow-hidden">
                        <!-- Decorative Badge -->
                        <div class="flex justify-center mb-8">
                            <span
                                class="px-4 py-1.5 rounded-full bg-[#18181B] text-[#B88E2F] text-[9px] font-bold tracking-[0.3em] uppercase border border-white/10">
                                Administrator
                            </span>
                        </div>

                        <div class="mb-10 text-center">
                            <h2 class="text-4xl font-serif text-[#18181B] mb-2 tracking-tight">Admin Login</h2>
                            <p class="text-zinc-400 text-sm">Secure access for store owners</p>
                        </div>

                        <form action="/owners/login" method="post" class="space-y-6">
                            <!-- Email Address -->
                            <div class="group">
                                <label for="email"
                                    class="block text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-2 transition-colors group-focus-within:text-[#B88E2F]">Email
                                    Address</label>
                                <div class="relative">
                                    <i
                                        class="ri-admin-line absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400 group-focus-within:text-[#18181B] transition-colors"></i>
                                    <input
                                        class="w-full pl-12 pr-4 py-4 rounded-2xl border border-zinc-100 bg-zinc-50 focus:bg-white focus:border-[#18181B] outline-none transition-all placeholder:text-zinc-400 text-sm font-medium"
                                        type="email" id="email" placeholder="admin@scatch.com" name="email" required>
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="group">
                                <label for="password"
                                    class="block text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-2 transition-colors group-focus-within:text-[#B88E2F]">Password</label>
                                <div class="relative">
                                    <i
                                        class="ri-lock-password-line absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400 group-focus-within:text-[#18181B] transition-colors"></i>
                                    <input
                                        class="w-full pl-12 pr-4 py-4 rounded-2xl border border-zinc-100 bg-zinc-50 focus:bg-white focus:border-[#18181B] outline-none transition-all placeholder:text-zinc-400 text-sm font-medium"
                                        type="password" id="password" placeholder="••••••••" name="password" required>
                                </div>
                            </div>

                            <div class="pt-4">
                                <button type="submit"
                                    class="w-full py-5 bg-[#18181B] text-white rounded-2xl font-bold text-xs tracking-[0.2em] uppercase transition-all hover:scale-[1.02] active:scale-[0.98] shadow-xl shadow-zinc-900/20 hover:shadow-2xl hover:shadow-zinc-900/30">
                                    Enter Dashboard
                                </button>
                            </div>
                        </form>

                        <div
                            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[#B88E2F]/30 to-transparent">
                        </div>
                    </div>

                    <div class="mt-8 text-center">
                        <a href="/"
                            class="text-zinc-400 text-xs hover:text-[#18181B] transition-colors flex items-center justify-center gap-2">
                            <i class="ri-arrow-left-line"></i> Back to Main Website
                        </a>
                    </div>
                </div>
            </div>

            <%- include('./partials/footer') %>